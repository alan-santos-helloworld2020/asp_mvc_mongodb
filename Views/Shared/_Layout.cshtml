<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Onload</title>
    <link rel="stylesheet" href="~/lib/material-icons/iconfont/material-icons.css" />
    <link rel="stylesheet" href="~/lib/materialize-css/dist/css/materialize.min.css" />
    <script src="~/lib/materialize-css/dist/js/materialize.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div>
        <nav class="black">
            <div class="nav-wrapper">

                <a href="#!" class="brand-logo center">agenda</a>
                <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>

                <ul class="right hide-on-med-and-down">
                    <li><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home<i
                                class="material-icons left">house</i></a></li>
                    <li><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Cadastro">Cadastro<i
                                class="material-icons left">edit</i></a></li>
                    <li><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Clientes">Clientes<i
                                class="material-icons left">book</i></a></li>

                </ul>

            </div>
        </nav>

        <ul class="sidenav" id="mobile-demo">
            <li><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home<i
                        class="material-icons left">house</i></a></li>
            <li><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Cadastro">Cadastro<i
                        class="material-icons left">edit</i></a></li>
            <li><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Clientes">Clientes<i
                        class="material-icons left">book</i></a></li>
        </ul>

    </div>

    <div class="row">
        <div class="col s12">

            @RenderBody()
            
        </div>
    </div>


    <script src="~/lib/vue/dist/vue.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
